@model Cinema
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add New Actor";
}

<h3 class="m-4">Add New Actor</h3>

<div class="col-md-4 offset-1">
    <form asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="form-group">
            <img id="LogoPreview" class="border-info rounded-circle" style="width: 150px"/>
        </div>

        <div class="form-group mt-5">
            <label asp-for="Logo" class="control-lable"></label>
            <input asp-for="Logo" class="form-control" placeholder="Type here..">
            <span asp-validation-for="Logo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-lable"></label>
            <input asp-for="Name" class="form-control" placeholder="Type here..">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-lable"></label>
            <input asp-for="Description" class="form-control" placeholder="Type here..">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <a class="btn btn-outline-primary" asp-action="Index">Back To List</a>
            <button class="btn btn-success float-right" value="add" type="submit">Add</button>
        </div>
    </form>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
                var output = document .getElementById('LogoPreview');
                    output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function(){
            var output = document .getElementById('LogoPreview');
            output.src = $(this).val();
        })
    </script>
}
