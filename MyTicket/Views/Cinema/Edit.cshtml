@model Cinema
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <h3 class="m-4">Edit for @Model.Name</h3>

            <div class="form-group text-center mb-5">
                <img src="@Model.Logo" class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
            </div>

            <div class="form-group">
                <label asp-for="Logo" class="control-lable"></label>
                <input asp-for="Logo" class="form-control">
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-lable"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-lable"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a class="btn btn-outline-primary" asp-action="Index">Back To List</a>
                <input type="submit" class="btn btn-success float-right" value="Submit" asp-action="Edit">
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var output = document.getElementById('LogoPreview');
            output.src = $(this).val();
        })
    </script>
}
