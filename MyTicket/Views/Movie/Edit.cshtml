@using MyTicket.Data.Enums;
@using MyTicket.ViewModel;
@model MovieViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Movie";
}


<div style="background-color: rgb(221, 212, 87)" class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <h3 class="m-4">Edit for @Model.Name</h3>

            <div class="form-group text-center mb-5">
                <img src="@Model.ImgUrl" class="border-info" style="max-width: 150px"
                     id="ProfilePicturePreview" />
            </div>

            <div class="form-group">
                <label asp-for="ImgUrl" class="control-lable"></label>
                <input asp-for="ImgUrl" class="form-control">
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-lable"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-lable"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-lable"></label>
                <input asp-for="Price" type="number" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-lable"></label>
                <input asp-for="StartDate" class="form-control">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-lable"></label>
                <input asp-for="EndDate" class="form-control">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MovieCategory" class="control-lable"></label>
                <select asp-for="MovieCategory" asp-items="Html.GetEnumSelectList<MovieCategory>()" class="form-control"></select>
                <span asp-validation-for="MovieCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ActorIds" class="control-lable">actors</label>
                <select asp-for="ActorIds" asp-items="ViewBag.Actors" class="form-control" multiple></select>
                <span asp-validation-for="ActorIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProducerId" class="control-lable"></label>
                <select asp-for="ProducerId" asp-items="ViewBag.Producers" class="form-control"></select>
                <span asp-validation-for="ProducerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CinemaId" class="control-lable"></label>
                <select asp-for="CinemaId" asp-items="ViewBag.Cinemas" class="form-control"></select>
                <span asp-validation-for="CinemaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a class="btn btn-outline-primary" asp-action="Index">Back To List</a>
                <input type="submit" class="btn btn-success float-right" value="Submit" asp-action="Edit">
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureUrl").val();
        })

        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
    }
